# =====================================================
# STUDIOGEN AI - ENVIRONMENT CONFIGURATION
# =====================================================
# This file contains all environment variables for both
# client and server applications.
# Copy this file to .env and fill in your values.
# =====================================================

# =====================================================
# SERVER CONFIGURATION
# =====================================================

# Node Environment (development | production | test)
NODE_ENV=development

# Server Port
PORT=3001

# =====================================================
# DATABASE (Prisma)
# =====================================================

# Development: SQLite
DATABASE_URL="file:./dev.db"

# Production: PostgreSQL (uncomment when deploying)
# DATABASE_URL="postgresql://user:password@localhost:5432/studiogen?schema=public"

# =====================================================
# JWT AUTHENTICATION
# =====================================================
# Generate secrets with: openssl rand -base64 64
# IMPORTANT: Change these in production!

JWT_ACCESS_SECRET="your-super-secret-access-key-min-32-chars-long-change-in-production"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-min-32-chars-long-change-in-production"

# Token Expiration
JWT_ACCESS_EXPIRES="15m"
JWT_REFRESH_EXPIRES="7d"

# =====================================================
# GOOGLE GEMINI AI
# =====================================================
# Get your API key from: https://aistudio.google.com/app/apikey

GEMINI_API_KEY="your-gemini-api-key-here"

# =====================================================
# GOOGLE OAUTH
# =====================================================
# Lightweight OAuth using Google Identity Services
# Get Client ID from: https://console.cloud.google.com/apis/credentials

GOOGLE_CLIENT_ID=""

# =====================================================
# CORS & SECURITY
# =====================================================

# Frontend URL for CORS
FRONTEND_URL="http://localhost:5173"

# Cookie Settings (set COOKIE_SECURE=true in production with HTTPS)
COOKIE_SECURE=false
COOKIE_SAME_SITE="lax"

# =====================================================
# RATE LIMITING
# =====================================================

# Window in milliseconds (15 minutes = 900000)
RATE_LIMIT_WINDOW_MS=900000

# Max requests per window
RATE_LIMIT_MAX_REQUESTS=100

# =====================================================
# CLIENT CONFIGURATION (Vite uses VITE_ prefix)
# =====================================================

# API URL for client
VITE_API_URL="http://localhost:3001/api"

# Google Client ID for OAuth button
VITE_GOOGLE_CLIENT_ID=""
